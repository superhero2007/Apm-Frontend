{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noImplicitAny": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "es2016.array.include"
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]
}
